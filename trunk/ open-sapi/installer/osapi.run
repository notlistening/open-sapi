#!/bin/sh

sudo apt-get install wine speech-dispatcher python-speechd wget 

mkdir $HOME/.winetrickscache
cd $HOME/.winetrickscache

wget http://open-sapi.googlecode.com/files/winetricks
winetricks sapi51

wget http://open-sapi.googlecode.com/files/msvcp60.dll
cp msvcp60.dll $HOME/.wine/drive_c/windows/system32/
rm -f *
cd ..
rmdir $HOME/.winetrickscache  

exit 
